{% comment %}
  Renders the site navigation with Mega Menu support (Carhartt Compact Style)
{% endcomment %}

{%- assign split_index = 6 -%}

{% for link in linklist.links %}
  {%- assign show_link = false -%}
  {%- if position == 'left' and forloop.index <= split_index -%}{%- assign show_link = true -%}{%- endif -%}
  {%- if position == 'right' and forloop.index > split_index -%}{%- assign show_link = true -%}{%- endif -%}

  {%- if show_link -%}
    <div class="header__nav-item">
      <a href="{{ link.url }}" class="header__nav-link {% if link.active %}is-active{% endif %}">
        {{ link.title }}
        {% if link.title contains 'New' %}<span class="badge-new">NEW</span>{% endif %}
      </a>

      {%- if link.links != blank -%}
        
        {%- comment -%} Check Hierarchy Depth {%- endcomment -%}
        {%- assign is_level_3 = false -%}
        {%- for child in link.links -%}
          {%- if child.links != blank -%}{%- assign is_level_3 = true -%}{%- break -%}{%- endif -%}
        {%- endfor -%}

        <div class="mega-menu">
          <div class="mega-menu__container">
            
            {%- if is_level_3 -%}
              <div class="mega-menu__columns">
                {%- for childlink in link.links -%}
                  <div class="mega-menu__col">
                    <a href="{{ childlink.url }}" class="mega-menu__heading">{{ childlink.title }}</a>
                    <ul class="mega-menu__list">
                      {%- for grandchild in childlink.links -%}
                        <li><a href="{{ grandchild.url }}" class="mega-menu__item">{{ grandchild.title }}</a></li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- endfor -%}
              </div>

            {%- else -%}
              <div class="mega-menu__flat-grid">
                {%- for childlink in link.links -%}
                  <a href="{{ childlink.url }}" class="mega-menu__flat-link">
                    {{ childlink.title }}
                  </a>
                {%- endfor -%}
              </div>
            {%- endif -%}

            <div class="mega-menu__promo">
               {%- assign promo_collection = collections['new-arrivals'] -%}
               <a href="{{ promo_collection.url | default: link.url }}" class="promo-card">
                 <div class="promo-image">
                   {% if promo_collection.image %}
                     <img src="{{ promo_collection.image | image_url: width: 600 }}" loading="lazy" alt="Promo">
                   {% else %}
                     <div class="promo-fallback"><span>{{ link.title }}</span></div>
                   {% endif %}
                 </div>
                 <span class="promo-title">Shop {{ link.title }} &rarr;</span>
               </a>
            </div>

          </div>
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
{% endfor %}