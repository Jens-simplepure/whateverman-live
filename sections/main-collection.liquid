{{ 'base.css' | asset_url | stylesheet_tag }}

<div class="collection-page main-content">
  <div class="container">
    
    <div class="collection-header" style="padding: 2rem 0; text-align: left;">
      <h1 style="font-size: clamp(2rem, 5vw, 4rem); margin-bottom: 0.5rem; text-transform:uppercase;">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="rte" style="color: #ccc; max-width: 800px; font-size: 1.1rem;">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>

    <div class="collection-toolbar">
      <button class="filter-trigger-btn" onclick="openFilterDrawer()">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right:8px;"><path d="M4 21v-7"/><path d="M4 10V3"/><path d="M12 21v-9"/><path d="M12 8V3"/><path d="M20 21v-5"/><path d="M20 12V3"/><path d="M1 14h6"/><path d="M9 8h6"/><path d="M17 16h6"/></svg>
        FILTERS
      </button>

      <div class="collection-sort">
        <label for="SortBy" class="visually-hidden">Sort by</label>
        <div style="position: relative; display:inline-block;">
          <select name="sort_by" id="SortBy" class="sort-by-select" onchange="location.search = '?sort_by=' + this.value">
            {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}
            {% for option in collection.sort_options %}
              <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
                {{ option.name }}
              </option>
            {% endfor %}
          </select>
          <svg style="position:absolute; right:0; top:50%; transform:translateY(-50%); pointer-events:none;" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><polyline points="6 9 12 15 18 9"></polyline></svg>
        </div>
      </div>
    </div>

    {% paginate collection.products by section.settings.products_per_page %}
      <div class="grid grid-4" id="ProductGrid">
        {%- for product in collection.products -%}
          {% render 'product-card', product_card_product: product %}
        {%- else -%}
          <div class="grid__item" style="grid-column: 1 / -1; text-align: center; padding: 4rem 0;">
            <p>No products found matching your selection.</p>
            <a href="{{ collection.url }}" class="btn btn-outline">Clear Filters</a>
          </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        <div class="pagination-wrapper" style="margin-top: 4rem; text-align: center;">
          {{ paginate | default_pagination }}
        </div>
      {%- endif -%}
    {% endpaginate %}
    
  </div>
</div>

{% render 'facets-drawer', results: collection %}

<style>
  .collection-toolbar {
    display: flex; justify-content: space-between; align-items: center;
    border-top: 1px solid rgba(255,255,255,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.1);
    padding: 1rem 0;
    margin-bottom: 2rem;
  }
  .filter-trigger-btn {
    background: transparent; border: 1px solid #fff; color: #fff;
    padding: 0.6rem 1.5rem; font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em; font-size: 1.1rem;
    cursor: pointer; display: flex; align-items: center; text-transform: uppercase;
    transition: all 0.2s;
  }
  .filter-trigger-btn:hover { background: #fff; color: #000; }
  
  .sort-by-select {
    background: transparent; border: none; color: #fff; 
    font-family: 'Inter', sans-serif; font-size: 1rem; padding-right: 20px;
    cursor: pointer; appearance: none; -webkit-appearance: none;
    text-transform: uppercase;
  }
  .sort-by-select:focus { outline: none; }
  
  .pagination .page { padding: 0.5rem 1rem; color: #fff; text-decoration: none; }
  .pagination .current { background: #aaff00; color: #000; padding: 0.5rem 1rem; }
</style>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    }
  ]
}
{% endschema %}