{%- style -%}
  /* --- 1. LAYOUT & STRUKTUR --- */
  .product-main-section {
    background: #ffffff;
    padding-bottom: 50px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; /* Clean Font Base */
  }

  .product-container {
    max-width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  /* Desktop Split: 65% Bilder / 35% Info */
  @media (min-width: 1024px) {
    .product-container {
      display: grid;
      grid-template-columns: 65% 35%; 
      align-items: start;
    }
  }

  /* --- 2. GALERIE LINKS (Carhartt Grid) --- */
  .gallery-wrapper {
    width: 100%;
    position: relative;
  }

  /* Desktop: 2 Spalten Grid */
  .gallery-desktop {
    display: none;
  }

  @media (min-width: 1024px) {
    .gallery-desktop {
      display: grid;
      grid-template-columns: 1fr 1fr; /* Exakt 2 Bilder nebeneinander */
      gap: 4px; /* Der feine weiße Abstand zwischen den Fotos */
      padding-right: 4px; /* Kleiner Abstand zur Info-Spalte */
    }
    
    .gallery-item {
      cursor: zoom-in; /* Zeigt an, dass man klicken kann */
      display: block;
      position: relative;
      overflow: hidden;
    }

    .gallery-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: opacity 0.3s;
    }
    
    .gallery-item:hover img {
      opacity: 0.95;
    }
  }

  /* Mobile: Simple Stack oder Slider (hier Stack) */
  .gallery-mobile {
    display: block;
  }
  @media (min-width: 1024px) { .gallery-mobile { display: none; } }
  .gallery-mobile img { width: 100%; display: block; margin-bottom: 4px; }


  /* --- 3. OVERLAY ZOOM (Lightbox) --- */
  .lightbox-overlay {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(255, 255, 255, 1); /* Weißer Hintergrund wie Carhartt WIP */
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .lightbox-overlay.active {
    opacity: 1;
    pointer-events: all;
  }

  .lightbox-img {
    max-height: 90vh;
    max-width: 90vw;
    object-fit: contain;
  }

  .lightbox-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    padding: 10px;
  }

  .lightbox-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    padding: 20px;
  }
  .lightbox-prev { left: 20px; }
  .lightbox-next { right: 20px; }


  /* --- 4. INFO SPALTE RECHTS --- */
  .product-info {
    padding: 20px;
  }

  @media (min-width: 1024px) {
    .product-info {
      position: sticky;
      top: 20px;
      padding: 40px 50px; /* Viel Platz innen */
      height: auto;
      max-height: 100vh;
      overflow-y: auto;
    }
  }

  /* TYPOGRAFIE & REIHENFOLGE */
  
  /* 1. Name */
  .product-title {
    font-family: 'Bebas Neue', sans-serif; /* Dein Font */
    font-size: 2.5rem;
    margin: 0 0 5px 0;
    line-height: 1;
    font-weight: 400;
    text-transform: uppercase;
  }

  /* 2. Preis */
  .product-price {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 0; /* Abstand kommt durch Wrapper */
  }

  /* ABSTANDSHALTER 1 */
  .spacer-large {
    height: 40px; /* Der definierte Abstand zwischen Preis und Farben */
    width: 100%;
  }

  /* 3. Farb-Vorschau (Bilder) */
  .color-swatch-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 10px; /* Kleiner Abstand zum Text darunter */
  }

  .color-swatch-btn {
    width: 45px;
    height: 45px;
    padding: 0;
    border: 1px solid transparent;
    cursor: pointer;
    background: #f4f4f4;
    overflow: hidden;
  }

  .color-swatch-btn img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .color-swatch-btn.is-active {
    border: 1px solid #000; /* Schwarzer Rahmen bei Auswahl */
  }
  
  .color-swatch-btn:hover {
    border-color: #999;
  }

  /* 4. Farb-Name (unter den Bildern) */
  .selected-color-name {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
    display: block;
  }

  /* ABSTANDSHALTER 2 */
  .spacer-medium {
    height: 30px; /* Abstand zwischen Farbname und Größen */
    width: 100%;
  }

  /* 5. Größen */
  .size-label {
    display: block;
    margin-bottom: 10px;
    font-size: 0.9rem;
    color: #333;
  }

  .size-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .size-btn {
    min-width: 50px;
    height: 40px;
    padding: 0 15px;
    background: white;
    border: 1px solid #e5e5e5;
    color: black;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
  }

  .size-btn:hover { border-color: black; }
  
  .size-btn.is-active {
    background: black;
    color: white;
    border-color: black;
  }
  
  .size-btn:disabled {
    color: #ccc;
    background: #f9f9f9;
    text-decoration: line-through;
    cursor: not-allowed;
  }

  /* Add to Cart Button */
  .add-btn {
    width: 100%;
    margin-top: 30px;
    padding: 15px;
    background: black;
    color: white;
    text-transform: uppercase;
    font-weight: bold;
    border: none;
    cursor: pointer;
  }
  .add-btn:disabled { background: #ccc; cursor: not-allowed; }

{%- endstyle -%}


<div class="product-main-section">
  <div id="lightbox" class="lightbox-overlay">
    <button class="lightbox-close" onclick="closeLightbox()">✕</button>
    <button class="lightbox-nav lightbox-prev" onclick="changeSlide(-1)">❮</button>
    <img id="lightbox-image" class="lightbox-img" src="" alt="Zoom">
    <button class="lightbox-nav lightbox-next" onclick="changeSlide(1)">❯</button>
  </div>


  <div class="product-container">
    
    <div class="gallery-wrapper">
      
      <div class="gallery-mobile">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}">
        {% endif %}
      </div>

      <div class="gallery-desktop" id="gallery-grid">
        {% for image in product.images %}
          <div class="gallery-item" onclick="openLightbox({{ forloop.index0 }})">
            <img 
              src="{{ image | image_url: width: 1000 }}" 
              alt="{{ image.alt | default: product.title }}"
              loading="lazy"
            >
          </div>
        {% endfor %}
      </div>
    </div>


    <div class="product-info">
      
      <form action="/cart/add" method="post" enctype="multipart/form-data" id="add-to-cart-form">
        
        <h1 class="product-title">{{ product.title }}</h1>
        
        <div class="product-price">
          {{ product.price | money }}
          {% if product.compare_at_price > product.price %}
            <s style="color:#999; margin-left: 8px;">{{ product.compare_at_price | money }}</s>
          {% endif %}
        </div>

        <div class="spacer-large"></div>

        {% unless product.has_only_default_variant %}
          
          {%- comment -%} LOGIK: Optionen finden {%- endcomment -%}
          {% assign color_opt = product.options_with_values | where: "name", "Color" | first %}
          {% unless color_opt %}{% assign color_opt = product.options_with_values | where: "name", "Farbe" | first %}{% endunless %}
          
          {% assign size_opt = product.options_with_values | where: "name", "Size" | first %}
          {% unless size_opt %}{% assign size_opt = product.options_with_values | where: "name", "Größe" | first %}{% endunless %}

          {% if color_opt %}
            <div class="color-swatch-container">
              {% for value in color_opt.values %}
                {% assign swatch_img = nil %}
                {% for variant in product.variants %}
                  {% if variant.options contains value and variant.featured_image %}
                    {% assign swatch_img = variant.featured_image %}
                    {% break %}
                  {% endif %}
                {% endfor %}

                <button type="button" 
                  class="color-swatch-btn {% if forloop.first %}is-active{% endif %}" 
                  data-value="{{ value }}"
                  onclick="selectColor(this, '{{ value }}')"
                >
                  {% if swatch_img %}
                    <img src="{{ swatch_img | image_url: width: 100, height: 100, crop: 'center' }}" alt="{{ value }}">
                  {% else %}
                    <span style="display:block; width:100%; height:100%; background-color: {{ value | handle }};"></span>
                  {% endif %}
                </button>
              {% endfor %}
            </div>

            <p class="selected-color-name" id="color-name-display">{{ color_opt.values.first }}</p>
          {% endif %}

          <div class="spacer-medium"></div>

          {% if size_opt %}
            <span class="size-label">Select Size</span>
            <div class="size-grid">
              {% for value in size_opt.values %}
                <button type="button" class="size-btn" data-value="{{ value }}" onclick="selectSize(this, '{{ value }}')">
                  {{ value }}
                </button>
              {% endfor %}
            </div>
          {% endif %}
          
          <select name="id" id="original-select" style="display:none;">
            {% for variant in product.variants %}
              <option value="{{ variant.id }}" 
                data-opt1="{{ variant.option1 }}" 
                data-opt2="{{ variant.option2 }}" 
                data-opt3="{{ variant.option3 }}"
                {% unless variant.available %}disabled{% endunless %}
              >
                {{ variant.title }}
              </option>
            {% endfor %}
          </select>

        {% endunless %}

        <button type="submit" id="add-btn" class="add-btn" disabled>
          Select Size
        </button>

        <div style="margin-top: 20px; border-top: 1px solid #eee; padding-top: 20px;">
           <details>
             <summary style="cursor:pointer; font-weight:bold;">Details</summary>
             <div style="padding-top:10px; font-size:0.9rem;">{{ product.description }}</div>
           </details>
        </div>

      </form>
    </div>

  </div>
</div>

<script>
  /* --- LIGHTBOX LOGIK --- */
  // Alle hochauflösenden Bilder in ein Array laden
  const lightboxImages = [
    {% for image in product.images %}
      "{{ image | image_url: width: 2000 }}"{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ];
  
  let currentSlideIndex = 0;
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-image');

  function openLightbox(index) {
    currentSlideIndex = index;
    lightboxImg.src = lightboxImages[index];
    lightbox.classList.add('active');
    document.body.style.overflow = 'hidden'; // Scrollen verhindern
  }

  function closeLightbox() {
    lightbox.classList.remove('active');
    document.body.style.overflow = '';
  }

  function changeSlide(direction) {
    currentSlideIndex += direction;
    // Loop
    if (currentSlideIndex >= lightboxImages.length) currentSlideIndex = 0;
    if (currentSlideIndex < 0) currentSlideIndex = lightboxImages.length - 1;
    
    lightboxImg.src = lightboxImages[currentSlideIndex];
  }

  // Schließen mit ESC Taste
  document.addEventListener('keydown', function(event) {
    if (event.key === "Escape") closeLightbox();
    if (event.key === "ArrowRight") changeSlide(1);
    if (event.key === "ArrowLeft") changeSlide(-1);
  });


  /* --- VARIANTEN LOGIK (Vereinfacht) --- */
  let selectedColor = "{{ color_opt.values.first }}";
  let selectedSize = null;

  function selectColor(btn, value) {
    // Buttons resetten
    document.querySelectorAll('.color-swatch-btn').forEach(b => b.classList.remove('is-active'));
    btn.classList.add('is-active');
    
    // Text ändern
    document.getElementById('color-name-display').innerText = value;
    selectedColor = value;
    
    checkVariant();
  }

  function selectSize(btn, value) {
    document.querySelectorAll('.size-btn').forEach(b => b.classList.remove('is-active'));
    btn.classList.add('is-active');
    selectedSize = value;
    
    checkVariant();
  }

  function checkVariant() {
    const select = document.getElementById('original-select');
    const addBtn = document.getElementById('add-btn');
    let foundVariant = null;

    // Finde passende Variante im Select
    for (let option of select.options) {
      const o1 = option.getAttribute('data-opt1');
      const o2 = option.getAttribute('data-opt2');
      const o3 = option.getAttribute('data-opt3');
      
      // Prüfen ob Option ausgewählt ist (Color oder Size kann opt1 oder opt2 sein)
      const matchColor = (o1 === selectedColor || o2 === selectedColor || o3 === selectedColor);
      const matchSize = (o1 === selectedSize || o2 === selectedSize || o3 === selectedSize);
      
      if (matchColor && matchSize) {
        foundVariant = option;
        break;
      }
    }

    if (foundVariant && !foundVariant.disabled) {
      addBtn.disabled = false;
      addBtn.innerText = "Add to Bag";
      select.value = foundVariant.value;
    } else {
      addBtn.disabled = true;
      if(foundVariant && foundVariant.disabled) {
        addBtn.innerText = "Sold Out";
      } else {
        addBtn.innerText = selectedSize ? "Unavailable" : "Select Size";
      }
    }
  }
</script>
