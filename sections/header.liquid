  { "type": "image_picker", "id": "logo", "label": "Logo" },
  { "type": "range", "id": "logo_width", "min": 50, "max": 300, "step": 5, "unit": "px", "label": "Logo Width", "default": 170 },
  { "type": "checkbox", "id": "header_sticky", "label": "Enable Sticky Header", "default": true }
] }
{% endschema %}