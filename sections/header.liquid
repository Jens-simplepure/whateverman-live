<header class="site-header" data-sticky="{{ settings.header_sticky }}">
  <div class="header__wrapper">
    
    <div class="header__logo">
      <a href="/" class="header__logo-link">
        {% if settings.logo != blank %}
          <img 
            src="{{ settings.logo | image_url: width: settings.logo_width }}" 
            alt="{{ shop.name }}"
            width="{{ settings.logo_width }}"
            height="{{ settings.logo_width | divided_by: settings.logo.aspect_ratio | round }}"
            loading="eager"
          >
        {% else %}
          <span class="header__logo-text">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>
    
    <nav class="header__nav header__nav--left">
      {% render 'site-nav', linklist: linklists.main-menu, position: 'left' %}
      {% render 'site-nav', linklist: linklists.main-menu, position: 'right' %}
    </nav>
    
    <div class="header__icons">
      
      <a href="{{ routes.search_url }}" class="header__text-link">
        {{ 'general.header.search' | t }}
      </a>
      
      <a href="{{ routes.account_url }}" class="header__text-link">
        {{ 'general.header.login' | t }}
      </a>
      
      <a href="{{ routes.cart_url }}" class="header__text-link header__text-link--bag" data-cart-drawer-open>
        {{ 'general.header.bag' | t }}
        <span class="header__cart-count">{{ cart.item_count }}</span>
      </a>
      
      <button class="header__mobile-toggle" data-mobile-menu-toggle aria-label="Menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>

  </div>
</header>

<div class="mobile-menu-drawer" id="MobileMenu">
  <div class="mobile-menu__inner">
    <nav class="mobile-menu__nav">
      {% for link in linklists.main-menu.links %}
        <div class="mobile-menu__item">
          <a href="{{ link.url }}" class="mobile-menu__link">{{ link.title }}</a>
          {% if link.links != blank %}
            <div class="mobile-menu__sub">
              {% for child in link.links %}
                <a href="{{ child.url }}" class="mobile-menu__sublink">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>
    
    <div class="mobile-menu__footer">
      <a href="{{ routes.account_url }}" class="mobile-menu__footer-link">Login</a>
      <a href="{{ routes.search_url }}" class="mobile-menu__footer-link">Search</a>
    </div>
  </div>
</div>

<script>
  // Simple Mobile Menu Toggle Script
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.querySelector('[data-mobile-menu-toggle]');
    const drawer = document.getElementById('MobileMenu');
    
    if(toggle && drawer) {
      toggle.addEventListener('click', function() {
        const isOpen = drawer.classList.contains('is-open');
        if(isOpen) {
          drawer.classList.remove('is-open');
          toggle.setAttribute('aria-expanded', 'false');
          document.body.style.overflow = '';
        } else {
          drawer.classList.add('is-open');
          toggle.setAttribute('aria-expanded', 'true');
          document.body.style.overflow = 'hidden';
        }
      });
    }
  });
</script>

<style>
  /* Basic Mobile Drawer Styles (damit es direkt funktioniert) */
  .mobile-menu-drawer {
    position: fixed; top: var(--header-height); left: 0; width: 100%; height: calc(100vh - var(--header-height));
    background: #000; z-index: 998;
    transform: translateX(-100%); transition: transform 0.3s ease;
    overflow-y: auto; padding: 2rem;
  }
  .mobile-menu-drawer.is-open { transform: translateX(0); }
  
  .mobile-menu__link {
    display: block; font-family: 'Bebas Neue', sans-serif; font-size: 2rem; color: #fff; text-decoration: none; margin-bottom: 1rem;
  }
  .mobile-menu__sub { padding-left: 1rem; margin-bottom: 1.5rem; }
  .mobile-menu__sublink { display: block; color: #999; text-decoration: none; font-size: 1rem; margin-bottom: 0.5rem; }
  
  .mobile-menu__footer { margin-top: 3rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem; display: flex; gap: 1rem; }
  .mobile-menu__footer-link { color: #fff; text-transform: uppercase; text-decoration: none; }
</style>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo Width",
      "default": 130
    },
    {
      "type": "checkbox",
      "id": "header_sticky",
      "label": "Enable Sticky Header",
      "default": true
    }
  ]
}
{% endschema %}