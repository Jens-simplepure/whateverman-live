{%- style -%}
  /* Styles sind primär in assets/base.css */
  /* Mobile Menu Drawer spezifische Styles, da diese JavaScript benötigen */
  .mobile-menu-drawer {
    position: fixed; 
    top: var(--header-height); 
    left: 0; 
    width: 100%; 
    height: calc(100vh - var(--header-height));
    background: var(--color-background); /* Schwarz */
    z-index: 998;
    transform: translateX(-100%); 
    transition: transform 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    overflow-y: auto; 
    padding: 2rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  
  .mobile-menu-drawer.is-open { 
    transform: translateX(0); 
  }
  
  .mobile-menu__link {
    display: block; 
    font-family: var(--font-heading); /* Bebas Neue */
    font-size: 2rem; 
    color: #fff; 
    text-decoration: none; 
    margin-bottom: 1rem;
    text-transform: uppercase;
    transition: color 0.2s;
  }
  
  .mobile-menu__link:hover {
    color: var(--color-primary); /* Neon Green */
    text-shadow: 0 0 10px var(--color-primary);
  }
  
  .mobile-menu__sub { 
    padding-left: 1rem; 
    margin-bottom: 1.5rem; 
    border-left: 1px solid rgba(255,255,255,0.2);
  }
  
  .mobile-menu__sublink { 
    display: block; 
    font-family: var(--font-body);
    color: #999; 
    text-decoration: none; 
    font-size: 1rem; 
    margin-bottom: 0.8rem;
    transition: color 0.2s;
  }
  
  .mobile-menu__sublink:hover {
    color: #fff;
  }
  
  .mobile-menu__footer { 
    margin-top: 3rem; 
    border-top: 1px solid rgba(255,255,255,0.1); 
    padding-top: 1.5rem; 
    display: flex; 
    gap: 1.5rem; 
  }
  
  .mobile-menu__footer-link { 
    font-family: var(--font-heading);
    color: #fff; 
    text-transform: uppercase; 
    text-decoration: none; 
    font-size: 1.2rem;
  }
  .mobile-menu__footer-link:hover { color: var(--color-primary); }
{%- endstyle -%}

<header class="site-header" data-sticky="{{ settings.header_sticky }}">
  <div class="header__wrapper">
    
    <div class="header__logo">
      <a href="/" class="header__logo-link">
        {% if settings.logo != blank %}
          <img 
            src="{{ settings.logo | image_url: width: settings.logo_width }}" 
            alt="{{ shop.name }}"
            width="{{ settings.logo_width }}"
            height="{{ settings.logo_width | divided_by: settings.logo.aspect_ratio | round }}"
            loading="eager"
          >
        {% else %}
          <span style="font-family:var(--font-heading); font-size:2rem; color:#fff; white-space:nowrap;">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>
    
    <nav class="header__nav header__nav--left">
      {% for link in linklists.main-menu.links %}
        <div class="header__nav-item">
          <a href="{{ link.url }}" class="header__nav-link {% if link.active %}is-active{% endif %}">
            {{ link.title }}
            {% if link.title contains 'New' %}
              <span class="badge-new">NEW</span>
            {% endif %}
          </a>

          {% if link.links != blank %}
            <div class="mega-menu">
              <div class="mega-menu__container">
                <div class="mega-menu__flat-grid">
                  {% for childlink in link.links %}
                    <a href="{{ childlink.url }}" class="mega-menu__flat-link">
                      {{ childlink.title }}
                    </a>
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>
    
    <div class="header__icons">
      
      <a href="{{ routes.search_url }}" class="header__text-link">
        SEARCH
      </a>
      
      <a href="{{ routes.account_url }}" class="header__text-link">
        LOGIN
      </a>
      
      <a href="{{ routes.cart_url }}" class="header__text-link header__text-link--bag" data-cart-drawer-open>
        BAG <span class="header__cart-count">{{ cart.item_count }}</span>
      </a>
      
      <button class="header__mobile-toggle" data-mobile-menu-toggle aria-label="Menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>

  </div>
</header>

<div class="mobile-menu-drawer" id="MobileMenu">
  <div class="mobile-menu__inner">
    <nav class="mobile-menu__nav">
      {% for link in linklists.main-menu.links %}
        <div class="mobile-menu__item">
          <a href="{{ link.url }}" class="mobile-menu__link">{{ link.title }}</a>
          
          {% if link.links != blank %}
            <div class="mobile-menu__sub">
              {% for child in link.links %}
                <a href="{{ child.url }}" class="mobile-menu__sublink">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>
    
    <div class="mobile-menu__footer">
      <a href="{{ routes.account_url }}" class="mobile-menu__footer-link">LOGIN</a>
      <a href="{{ routes.search_url }}" class="mobile-menu__footer-link">SEARCH</a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.querySelector('[data-mobile-menu-toggle]');
    const drawer = document.getElementById('MobileMenu');
    
    if(toggle && drawer) {
      toggle.addEventListener('click', function() {
        const isOpen = drawer.classList.contains('is-open');
        
        // Animation der Burger-Linien könnte man hier per CSS Klasse am Button machen
        // Einfacher Toggle Logik:
        if(isOpen) {
          drawer.classList.remove('is-open');
          toggle.setAttribute('aria-expanded', 'false');
          document.body.style.overflow = ''; // Scrollen erlauben
        } else {
          drawer.classList.add('is-open');
          toggle.setAttribute('aria-expanded', 'true');
          document.body.style.overflow = 'hidden'; // Scrollen sperren
        }
      });
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo Width",
      "default": 170
    },
    {
      "type": "checkbox",
      "id": "header_sticky",
      "label": "Enable Sticky Header",
      "default": true
    }
  ]
}
{% endschema %}