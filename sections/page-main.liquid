{%- style -%}
  .page-main {
    padding: 4rem 0;
    min-height: 60vh;
  }
  
  .page-main__wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .page-main__title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    text-align: center;
    margin-bottom: 3rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .page-main__content {
    color: var(--color-text);
    line-height: 1.8;
  }
  
  .page-main__content h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.75rem;
    margin: 2rem 0 1rem;
  }
  
  .page-main__content h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    margin: 1.5rem 0 0.75rem;
  }
  
  .page-main__content p {
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }
  
  .page-main__content ul,
  .page-main__content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--color-text-muted);
  }
  
  .page-main__content li {
    margin-bottom: 0.5rem;
  }
  
  .page-main__content a {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .page-main__content a:hover {
    text-shadow: var(--glow-primary);
  }
  
  .page-main__content blockquote {
    border-left: 3px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-muted);
  }
  
  .page-main__content img {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
  }
{%- endstyle -%}

<section class="page-main">
  <div class="page-main__wrapper">
    <h1 class="page-main__title">{{ page.title }}</h1>
    
    <div class="page-main__content">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Main",
  "class": "section-page-main",
  "settings": []
}
{% endschema %}
